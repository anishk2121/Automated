<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anish.automatedio.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginTop="0dp">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        card_view:cardBackgroundColor="#673ab7"

            android:layout_margin="8dp"
            card_view:cardPreventCornerOverlap="false"

        card_view:cardElevation="15dip"
        card_view:cardCornerRadius="15dip"
            android:layout_weight="1"
            android:layout_marginTop="15dip">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/document"
                android:text="Tasks"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="8dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardBackgroundColor="#ff3d00"
            card_view:cardElevation="15dip"
            card_view:cardCornerRadius="15dip"
            android:layout_weight="1"
            android:layout_marginTop="15dip">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/plus"
                android:text="Add Tasks"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv3"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="8dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardBackgroundColor="#2979ff"
            card_view:cardElevation="15dip"
            card_view:cardCornerRadius="15dip"
            android:layout_weight="1"
            android:layout_marginTop="15dip">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/support"
                android:text="Settings"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp"
                />
        </android.support.v7.widget.CardView>

    </LinearLayout>



</RelativeLayout>
