<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5px"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anish.automatedio.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="100">
        <FrameLayout
            android:id="@+id/fl1"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:background="?attr/colorPrimaryDark">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/document"
                android:text="Tasks"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="40px"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl2"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:background="#f25213">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/plus"
                android:text="Add Tasks"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="40px"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl3"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:background="#2bffa6">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/support"
                android:text="Settings"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="40px"
                />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
